    #register_popup.fixed-bottom.bg-white
      if signin != 'yes'
        form(id = "SigninForm" role="form" method="POST")
          p
            | Student Id 
            input#newid(type='text', name='newid')
          p
            | Password 
            input#newpassword(type='password', name = 'newpassword')
          p
            | Name 
            input#newname(type = 'text', name = 'newname')
          p
            | Birth 
            input#newbirth(type = 'text', name = 'newbirth')
          p
            | Department 
            input#newdepartment(type = 'text', name = 'newdepartment')
          button#RegisterBtn.btn.btn-light(type='button') Register



    #login_popup.fixed-bottom.bg-white
      if signin != 'yes'
        form(id = "LoginForm" role="form" method="POST")
          p
            | ID
            input#myid(type='text', name='id')
          p
            | PASSWORD
            input#pass(type='password', name='password')
          button#LoginBtn.btn.btn-light(type='button') Login


    #my_buttonNav.navbar.navbar-light.navbar-expand-lg.fixed-bottom
      .nav-item
        button.btn.btn-light(type='button', onclick="hideNavi('my_nav')") Hide/Show Navigation Bar
      .nav-item
        button.btn.btn-light(type='button', onclick="changeTableStyle('my_table')") White/Black Table Style
      
      if signin != 'yes'
        .nav-item
          button#register.btn.btn-info.btn-lg(type='button', style='position: absolute; right: 100px; bottom:10px;') Sign Up
        .nav-item
          button#login.btn.btn-success.btn-lg(type='button', style='position: absolute; right: 10px; bottom:10px;') Login
      else if signin == 'yes'
        p
          | User : #{student_id}
        button#LogoutBtn.btn.btn-warning.btn-lg(type='button', style='position: absolute; right: 10px; bottom:10px;') Logout
        button#GLSBtn.btn.btn-info.btn-lg(type='button', style='position:absolute; right: 120px; bottom:10px;') GLS

